<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout"
    tools:context=".AddPropertyActivity">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"
        android:background="@color/textColor"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:headerLayout="@layout/menu_header"
        android:fitsSystemWindows="true"
        android:isScrollContainer="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layoutAddProp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add a property"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/red"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:id="@+id/txtFields"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/layoutAddProp"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_home_icon"
                            app:tint="@color/blue"/>
                        <EditText
                            android:id="@+id/txtPropertyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:inputType="text"
                            android:hint="Property name"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:background="@color/red" />

                    <LinearLayout
                        android:layout_marginTop="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="@color/blue"
                            android:src="@drawable/ic_payment_icon"/>
                        <EditText
                            android:id="@+id/txtPricePerNight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:inputType="number"
                            android:hint="Price per night"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"
                            android:autofillHints="100 lei" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:background="@color/red" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:text="NOTE: "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="12sp"
                            android:text="Be aware that the payment is made by the user at the property!"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="18dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_description_icon"
                            app:tint="@color/blue"/>
                        <EditText
                            android:id="@+id/txtDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:inputType="textMultiLine"
                            android:hint="Description"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"
                            android:autofillHints="100 lei" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:background="@color/red" />

                    <LinearLayout
                        android:layout_marginTop="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_people_icon"
                           app:tint="@color/blue"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtCapacity"
                            android:layout_marginStart="5dp"
                            android:hint="Capacity"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:background="@color/red" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select the city around which your property is located :" />
                    <Spinner
                        android:id="@+id/spinnerPlaces"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addMarker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtFields"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:text="Add pin on the map"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="25dp"
                    app:icon="@drawable/ic_my_location_icon"
                    app:iconTint="@color/blue"
                    app:strokeColor="@color/blue"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/photoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addMarker"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:text="Add photo of the property: " />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/photoText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_add_photo" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddProperty"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/red"
                    android:text="Add property"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:cornerRadius="7dp"
                    app:strokeColor="@color/red"
                    app:strokeWidth="3dp" />

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>