<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout"
    tools:context=".PropertyActivity">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"
        android:background="@color/textColor"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:headerLayout="@layout/menu_header"
        android:fitsSystemWindows="true"
        android:isScrollContainer="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPropertyName"
                    android:text="Property name"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/textColor"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPropertyName"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtPropertyDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/textColor"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price / night (RON)"
                            android:textColor="@color/textColor"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPropertyPricePerNight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="100"
                            android:textColor="@color/textColor"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:src="@drawable/ic_date_picker" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/white"
                            android:text="Select date"
                            android:textAllCaps="false"
                            android:textColor="@color/red"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            app:cornerRadius="7dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCall"
                            android:layout_width="170dp"
                            android:layout_height="70dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:backgroundTint="@color/white"
                            android:text="Call owner"
                            android:textAllCaps="false"
                            android:textColor="@color/blue"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            app:cornerRadius="7dp"
                            app:icon="@drawable/ic_phone_icon"
                            app:iconTint="@color/blue"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="3dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReserve"
                            android:layout_marginEnd="12dp"
                            android:layout_width="170dp"
                            android:layout_height="70dp"
                            android:backgroundTint="@color/blue"
                            android:layout_alignParentEnd="true"
                            android:text="Reserve"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_hotel"
                            app:iconTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            app:cornerRadius="7dp" />
                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>