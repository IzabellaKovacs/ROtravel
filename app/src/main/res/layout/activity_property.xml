<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/blueScreen"
            android:layout_width="260dp"
            android:layout_height="330dp"
            android:background="@drawable/shape_v2">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                app:srcCompat="@drawable/ic_arrow_back" />

            <ImageView
                android:id="@+id/iconMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_my_location_icon"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/btnCheckOnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/iconMap"
                android:text="check on map"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/propertyCard"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_width="290dp"
            app:cardCornerRadius="40dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/imageProperty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tm" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blueScreen"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/txtPropertyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Property name"
                android:textColor="@color/textColor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPropertyName"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_payment_icon" />

                <TextView
                    android:id="@+id/txtPropertyPricePerNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="100"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="lei"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="(Payment is made at the property)"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_people_icon"
                    app:tint="@color/blue" />

                <TextView
                    android:id="@+id/txtMaxCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="capacity"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="max."
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/capacity"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_description_icon" />

                <TextView
                    android:id="@+id/txtPropertyDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="description"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/notForOwner"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:backgroundTint="#FBF8DD"
                android:elevation="5dp"
                app:cardCornerRadius="25dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Make a reservation!"
                        android:textColor="@color/textColor"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/enterCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtPls"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ppIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_people_icon_v2"
                            app:tint="@color/red" />

                        <EditText
                            android:id="@+id/txtEnterCapacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/ppIcon"
                            android:background="@android:color/transparent"
                            android:hint="enter capacity"
                            android:inputType="number"
                            android:textColor="@color/textColor"
                            android:textSize="14sp" />
                    </RelativeLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/enterCapacity"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/white"
                        android:text="Select date"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="25dp"
                        app:icon="@drawable/ic_calendar_icon"
                        app:iconTint="@color/red"
                        app:strokeColor="@color/red"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:id="@+id/selectedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnSelectDate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="30dp"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/selectedDate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total payment:"
                            android:textColor="@color/red"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text=""
                            android:textColor="@color/textColor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCallOwner"
                            android:layout_width="160dp"
                            android:layout_height="70dp"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="@color/white"
                            android:text="Call owner"
                            android:textAllCaps="false"
                            android:textColor="@color/blue"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:cornerRadius="7dp"
                            app:icon="@drawable/ic_person_icon"
                            app:iconTint="@color/blue"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="3dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReserve"
                            android:layout_width="160dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="5dp"
                            android:backgroundTint="@color/blue"
                            android:text="Reserve"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:cornerRadius="7dp"
                            app:icon="@drawable/ic_hotel"
                            app:iconTint="@color/white" />
                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </RelativeLayout>


</ScrollView>