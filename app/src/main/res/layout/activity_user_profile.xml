<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout"
    tools:context=".UserProfileActivity">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"
        android:background="@color/textColor"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:headerLayout="@layout/menu_header"
        android:fitsSystemWindows="true"
        android:isScrollContainer="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/imgLayout"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/blueImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:src="@drawable/kk"
                        android:scaleType="fitXY"/>

                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_profile_picture" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_centerInParent="true"
                        android:id="@+id/info"
                        android:layout_below="@+id/imgLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/textColor"
                            android:text="User name"/>
                        <TextView
                            android:layout_below="@+id/txtName"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:id="@+id/txtPhone"
                            android:textColor="@color/textColor"
                            android:text="Phone number"/>
                        <TextView
                            android:layout_below="@+id/txtPhone"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:id="@+id/txtEmail"
                            android:textColor="@color/textColor"
                            android:text="Email"/>

                    </RelativeLayout>

                <LinearLayout
                    android:id="@+id/reservationsShow"
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:layout_below="@+id/info"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservations"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:background="@color/blue" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/allReservations"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/userProperties"
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:layout_below="@+id/reservationsShow"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My properties"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:background="@color/blue" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/allProperties"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>




